{
    "version": "1.0",
    "description": "Simple docker webservice example using Yocto",
    "sources": {
        "bitbake": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/bitbake;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "f23e186a75e71ba885b9b53a1dfda99af29c67b0"
            },
            "path": "bitbake"
        },
        "openembedded-core": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/openembedded-core;protocol=https"
                    }
                },
                "branch": "whinlatter",
                "rev": "7ac6a43dafa85732178933716f6ba7cdf8557990"
            },
            "path": "openembedded-core"
        },
        "meta-yocto": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.yoctoproject.org/meta-yocto;protocol=https"
                    }
                },
                "branch": "whinlatter",
                "rev": "d02d3faaf4d6075ea03e9eb47654ec7639f929a0"
            },
            "path": "meta-yocto"
        },
        "meta-openembedded": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/meta-openembedded;protocol=https"
                    }
                },
                "branch": "whinlatter",
                "rev": "a4e768dcfae181dd99e39c4286fa0729ca7f4e47"
            },
            "path": "meta-openembedded"
        },
        "meta-virtualization": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.yoctoproject.org/meta-virtualization;protocol=https"
                    }
                },
                "branch": "whinlatter",
                "rev": "8f03a0cc8950ef5d5e4f11d9ae494946d1991e45"
            },
            "path": "meta-virtualization"
        }
    },
    "bitbake-setup": {
        "configurations": [
            {
                "name": "docker-ex",
                "description": "docker example for minimal webservice",
                "bb-layers": [
                    "openembedded-core/meta",
                    "meta-yocto/meta-poky",
                    "meta-openembedded/meta-oe",
                    "meta-openembedded/meta-filesystems",
                    "meta-openembedded/meta-python",
                    "meta-openembedded/meta-networking",
                    "meta-virtualization"
                ],
                "bb-layers-file-relative": [
                    "meta-application"
                ],
				"oe-fragments": ["core/yocto/sstate-mirror-cdn", "application/docker-ex"],
                "oe-fragments-one-of": {
                    "machine": {
                        "description": "Target machine architecture",
                        "options": ["machine/qemuarm64", "machine/qemux86-64"]
                    },
                    "distro": {
                        "description": "Distribution variants",
                        "options": ["distro/poky"]
                    }
                }
            }
        ]
    }
}
